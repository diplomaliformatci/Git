package Grafik2_1;

import java.awt.Graphics;
import java.awt.Graphics2D;

import javax.swing.JPanel;

public class Surface extends JPanel{
	private int x1=30;
	private int y1=30;
	private int x2=300;
	private int y2=300;
	private int x3,y3;
	int sayi=10 , sayac = 9;
				public Surface (){
					x3 = ((x2-x1)/15); 
					y3 = ((y2-y1)/15);		
				}
	private void doDrawing (Graphics g){
			Graphics2D g2d = (Graphics2D)g;
			
			while (this.sayac <= 0){
				  x1 = (int)x3;
			         y1 = (int)y3;
			         x3 +=(int)x3;
			         y3 +=(int)y3;
			         	sayac--;
				g2d.drawLine(x1, y1,(int)x3,(int)y3 );
			       
			}
			
		}
	@Override
		public void paintComponent(Graphics g){
			//super.paintComponent(g);
			doDrawing(g);
		}

}
